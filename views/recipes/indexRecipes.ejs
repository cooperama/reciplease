<%- include('../partials/navbar') %> 


<div class="carousel-container">
  <div class="row justify-content-center">

    <div id="carouselExampleControls" class="carousel slide col-8" data-ride="carousel">
      <div class="carousel-inner">

       <div class="carousel-item active">
        <a href="/recipes/<%= recipes[0]._id %>">
          <img src="<%= recipes[0].image %> " class="d-block w-100" alt="<%= recipes[0].name %> ">
        </a>
      </div>
       <% for( let i = 1; i < recipes.length; i++ ) { %>
        <div class="carousel-item">
          <a href="/recipes/<%= recipes[i]._id %>">
            <img src="<%= recipes[i].image %> " class="d-block w-100" alt="<%= recipes[i].name %> ">
          </a>
        </div>
       <% } %>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    
  </div>
</div>
</div>


  <div class="recipes-list">
    <ul>
    <% for( let i = 0; i < recipes.length; i++ ) { %>
      <li><a href="/recipes/<%= recipes[i]._id %>"><%= recipes[i].name %></a></li>
      <% } %>
    </ul>
  </div>

    
